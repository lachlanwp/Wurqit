{
  "name": "wurqit",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test-start": "electron test-build.js",
    "build": "dotenv electron-builder",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@electron/notarize": "^2.2.0",
    "dotenv-cli": "^4.0.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.5"
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "ffmpeg-static": "^5.1.0"
  },
  "build": {
    "afterSign": "notarize.js",
    "appId": "com.lachlanpearce.wurqit",
    "productName": "Wurqit",
    "files": [
      "**/*",
      "!media/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "extraResources": [
      {
        "from": "media",
        "to": "app.asar.unpacked/media",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "media"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "media/icon/windows/app.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "media/icon/apple/app.icns",
      "entitlements": "info.plist",
      "entitlementsInherit": "info.inherit.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      }
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "media/icon/windows.png"
    }
  }
}
