{
  "name": "wurqit",
  "version": "1.0.7",
  "main": "src/main.js",
  "homepage": "https://www.wurqit.com",
  "email": "lwpearce@gmail.com",
  "author": {
    "email": "lwpearce@gmail.com",
    "name": "Lachlan Pearce",
    "url": "https://www.wurqit.com"
  },
  "scripts": {
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "start": "yarn build:ts && electron .",
    "dev": "yarn build:ts && electron .",
    "test-start": "electron test-build.js",
    "build": "yarn build:ts && dotenv electron-builder",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@electron/notarize": "^2.2.0",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.19.0",
    "dotenv-cli": "^4.0.0",
    "electron": "^28.2.0",
    "electron-builder": "^26.0.12",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@electron/remote": "2.1.3",
    "electron-is-dev": "^1.2.0",
    "ffmpeg-static": "^5.1.0"
  },
  "build": {
    "afterSign": "notarize.js",
    "appId": "com.lachlanpearce.wurqit",
    "productName": "Wurqit",
    "files": [
      "**/*",
      "!media/**/*"
    ],
    "asarUnpack": [
      "node_modules/ffmpeg-static/**"
    ],
    "extraResources": [
      {
        "from": "media",
        "to": "app.asar.unpacked/media",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "media"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "media/icon/windows/app.ico"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "media/icon/apple/app.icns",
      "entitlements": "info.plist",
      "entitlementsInherit": "info.inherit.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": {
        "target": "dmg",
        "arch": [
          "universal"
        ]
      }
    },
    "dmg": {
      "sign": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "media/icon/windows.png"
    }
  }
}
